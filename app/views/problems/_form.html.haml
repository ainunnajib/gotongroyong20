= form_for @problem do |f|
  - if @problem.errors.any?
    #error_explanation
      %h2= "#{pluralize(@problem.errors.count, "error")} prohibited this problem from being saved:"
      %ul
        - @problem.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :category_id
    = f.number_field :category_id
  .field
    = f.label :summary
    = f.text_area :summary
  .field
    = f.label :cause
    = f.text_area :cause
  .field
    = f.label :symptom
    = f.text_area :symptom
  .field
    = f.label :effect
    = f.text_area :effect
  .field
    = f.label :urgency
    = f.number_field :urgency
  .field
    = f.label :province_id
    = f.number_field :province_id
  .field
    = f.label :kabupaten_id
    = f.number_field :kabupaten_id
  .field
    = f.label :kelurahan_id
    = f.number_field :kelurahan_id
  .field
    = f.label :reported_by
    = f.number_field :reported_by
  .actions
    = f.submit 'Save'
